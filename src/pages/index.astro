---
import NavBar from "@components/NavBar.astro";
import Hero from "@components/Hero.astro";
import "../styles/global.css";
import Services from "@components/Services.astro";
import Team from "@components/Team.astro";

const team = [
  {
    photo: "/media/juanPablo.jpg",
    name: "Juan Pablo Cérón",
    role: "Líder Técnico y Fundador",
  },
  {
    photo: "/media/juanYonda.jpg",
    name: "Juan Camilo Yonda Conda",
    role: "Líder de Desarrollo de Software",
  },
  {
    photo: "/media/karen.jpg",
    name: "Karen coque",
    role: "Coordinadora Administrativa y Financiera",
  },
  {
    photo: "/media/andres.jpg",
    name: "Edinson Andres Ordoñez",
    role: "Especialista en Ciberseguridad",
  },
  {
    photo: "/media/Luna.jpg",
    name: "Luna Angelica Giraldo Pulgarin",
    role: "Responsable de Control de Calidad (QA)",
  },
  {
    photo: "/media/santiago.jpg",
    name: "David Santiago Rodriguez Cruz ",
    role: "Desarrollador de Aplicaciones Móviles",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Code Crafther Studios</title>
  </head>
  <body class="bg-primary custom-background">
    <NavBar />
    <main>
      <section
        class="flex flex-col justify-center items-center gap-10 m-auto pb-10"
      >
        <Hero />
        <div class="flex justify-center items-center w-[90%] xl:w-[60vw]">
          <video
            src="/media/videoMac.mp4"
            loop
            playsinline
            autoplay
            muted
            class="w-full h-full object-cover"></video>
        </div>
      </section>
      <Services />

      <h1
        class="title text-2xl text-center bg-gradient-to-r from-accent to-secondary text-transparent bg-clip-text lg:text-[56px] md:text-4xl sm:text-3xl w-full h-full pb-5 pt-[85px] mt-[-40px]"
      >
        Nuestro Equipo
      </h1>
      <div class="w-full flex justify-center items-center py-12">
        <section class="flex justify-center items-center flex-wrap gap-10">
          {
            team.map((index) => (
              <Team photo={index.photo} name={index.name} role={index.role} />
            ))
          }
        </section>
      </div>
    </main>
  </body>
</html>
