---
import Github from "@icons/github.astro";
import Discord from "@icons/discord.astro";
import Linkedin from "@icons/linkedin.astro";
import CodeCraterStudio from "@icons/codeCraterStudio.astro";
---

<script>
  // FunciÃ³n para agregar clase de blur cuando el header es sticky
  function handleScroll() {
    const header = document.getElementById("main-header");
    if (window.scrollY > 0) {
      header?.classList.add("bg-opacity-50", "backdrop-blur-md");
    } else {
      header?.classList.remove("bg-opacity-50", "backdrop-blur-md");
    }
  }

  if (typeof window !== "undefined") {
    window.addEventListener("scroll", handleScroll);
  }
</script>

<header
  id="main-header"
  class="bg-black text-white flex justify-between items-center p-4 sticky top-0 z-50"
>
  <div class="logo ml-[100px]">
    <img
      src="/logos/crafterCodeBox.svg"
      alt="Code Crafter Studio"
      class="h-10"
    />
  </div>
  <div class="social-links flex items-center space-x-4 mr-[100px]">
    <a
      href="https://github.com"
      target="_blank"
      aria-label="GitHub"
      class="text-sm"
    >
      <Github />
    </a>
    <a
      href="https://linkedin.com"
      target="_blank"
      aria-label="LinkedIn"
      class="text-sm"
    >
      <Linkedin />
    </a>
    <a
      href="https://discord.com"
      target="_blank"
      aria-label="Discord"
      class="text-sm"
    >
      <Discord />
    </a>
  </div>
</header>
